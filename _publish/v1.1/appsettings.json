{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Swagger": {
    "SwaggerGen": {
      "SwaggerGeneratorOptions": {
        "SwaggerDocs": {
          "v1": {
            "Title": "Sample API",
            "Version": "1"
          }
        }
      }
    },
    "SwaggerUI": {
      "ConfigObject": {
        "ShowCommonExtensions": true,
        "DisplayOperationId": true
      }
    }
  }
}